{% extends 'PimEnrichBundle::layout.html.twig' %}

{% oro_title_set({ params: { "%locale.code%": form.vars.value.code } }) %}

{% block content %}

    {{ JSFV(form) }}
    {{ form_start(form, {
        'action': path('pimee_enrich_locale_edit', { id: form.vars.value.id }),
        'attr': {
            'data-updated-title': 'confirmation.leave'|trans,
            'data-updated-message': 'confirmation.discard changes'|trans({ '%entity%': 'locale.title'|trans })
        }
    }) }}

        {% set title = 'locale.edit'|trans ~ ' - ' ~ form.vars.value.code %}

        {% set buttons %}
            {{ elements.backLink(path('pim_enrich_locale_index')) }}
            {{ elements.submitBtn() }}
        {% endset %}

        {{ elements.page_header(title, buttons, null, null, elements.updated(form.vars.id)) }}

        {{ elements.form_navbar(['Properties', 'Permissions']) }}

        <div class="row-fluid tab-content">
            {{ elements.form_errors(form) }}

            <div class="tab-pane active" id="properties">
                {% set generalProperties %}
                    {{ form_row(form.code) }}
                {% endset %}
                {{ elements.accordion({
                    'pane.accordion.general_properties': generalProperties
                }) }}
            </div>
            <div class="tab-pane" id="permissions">
                {{ elements.accordion({ 'pane.accordion.permissions': form_widget(form.permissions) }) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
