{% set activeTab = false %}

{% if resource_granted('pim_enrich_product_edit_attributes') %}
    <div class="tab-pane active" id="attributes">
        {% include 'PimEnterpriseEnrichBundle:Product:_attributes.html.twig' %}
        {% if not form.vars.groups %}
            <div class="alert alert-info">
                {{ 'attribute group.permissions.no_access_to_attributes'|trans }}
            </div>
        {% endif %}
        {% set activeTab = true %}
    </div>
{% endif %}

{% if resource_granted("pim_enrich_product_categories_view")
    and is_granted(constant('PimEnterprise\\Bundle\\SecurityBundle\\Attributes::OWN'), product) %}
    <div class="tab-pane" id="categories">
       {% include 'PimEnrichBundle:Product:_associateCategories.html.twig' %}
    </div>
    {% set activeTab = true %}
{% endif %}

{% if resource_granted("pim_enrich_associations_view")
    and is_granted(constant('PimEnterprise\\Bundle\\SecurityBundle\\Attributes::OWN'), product) %}
    {{ form_widget(form.associations, { 'attr': { 'class': 'hide' }}) }}
    <div class="tab-pane" id="associations" data-url="{{ path('pim_enrich_associations', { id: product.id , dataLocale: dataLocale}) }}">
    </div>
    {% set activeTab = true %}
{% endif %}

<div class="tab-pane" id="completeness" data-url="{{ path('pim_enrich_product_completeness', { id: product.id, dataLocale: dataLocale }) }}">
    {% set activeTab = true %}
</div>

{% if resource_granted("pim_enrich_product_comment") %}
    <div class="tab-pane{% if not activeTab %} active{% endif %}" id="comments" data-url="{{ path('pim_enrich_product_comments', { id: product.id, dataLocale: dataLocale }) }}">
        {% set activeTab = true %}
    </div>
{% endif %}

{% if resource_granted('pim_enrich_product_history') %}
    <div class="tab-pane" id="history" data-url="{{ path('pim_enrich_product_history', { id: product.id }) }}"></div>
{% endif %}

{% if is_granted(constant('PimEnterprise\\Bundle\\SecurityBundle\\Attributes::OWN'), product) %}
<div class="tab-pane" id="proposals" data-url="{{ path('pimee_enrich_product_product_drafts', { id: product.id, dataLocale: dataLocale }) }}">
</div>
{% endif %}
