{% if show %}
    <div class="quick-launchpad-widget span6">
        <div class="clearfix">
            <div class="widget-header">
                {{ 'pimee_dashboard.widget.product_drafts.title'|trans }}
            </div>
            <div class="widget-content">
                <table id="product-drafts-widget" class="table table-condensed table-light groups unspaced"></table>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        require(
            ['jquery', 'pimee/dashboard/product-drafts-widget'],
            function ($, ProductDraftsWidget) {
                'use strict';
                $(function() {
                    ProductDraftsWidget.init({el: '#product-drafts-widget', alias: 'product_drafts'});
                });
            }
        );
    </script>
{% endif %}
